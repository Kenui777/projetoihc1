@model projetoihc.Models.Clientes

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1>Detalhes do Cliente</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        @await Html.PartialAsync("ClienteDetails", Model)
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-primary btn-sm">Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar para a lista</a>
</div>
